{
  "compilerOptions": {
    "lib": ["ES2022"],
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES2022",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "build"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "files": ["src/index.ts"],
  "lib": ["es2022"]
}
